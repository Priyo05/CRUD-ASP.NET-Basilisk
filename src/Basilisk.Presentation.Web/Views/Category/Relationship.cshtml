@model CategoryIndexViewModel

@section breadcrumbs {
    <span> <a asp-action="Index">All Category</a> /Relationship </span>
}

<div class="grid-container">

    <div class="header-info">
        <div>
            Content Name:
            <span th:text="*{name}">@Model.Name</span>
        </div>
        <div>
            Content Description:
            <span>@Model.Description</span>
        </div>
    </div>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Company</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Supplier</td>
                    <td>Rp @product.Price.ToString("N2")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4">
                    <div class="pagination">
                        <div>page 1 of 1</div>
                        <div>
                            <a>1</a>
                        </div>
                    </div>
                </td>
            </tr>
        </tfoot>
    </table>
</div>